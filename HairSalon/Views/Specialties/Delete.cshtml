@using HairSalon.Models;

<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Delete</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Remove Specialties</h1>
      <em>Be careful when using this page</em>
    </div>
    <form action="/stylists/specialties/deleteSpecialty" method="post">
      <select name="specialtyId">
      @foreach(Specialty specialty in Specialty.GetListOfSpecialties())
      {
        <option value="@specialty.GetId()">@specialty.GetSpecialtyType()</option>

      }
      </select>
      <button type="submit" name="button">Delete</button>
    </form>

    <form action="/stylists/specialties/deleteAll" method="post">
      <button type="submit" name="button">Delete All Specialtys</button>
    </form>


    <a href="/" class="btn btn-dark">Go to Homepage</a>
  </div>
</body>
</html>
