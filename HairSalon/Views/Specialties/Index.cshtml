<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Salon's Specialties</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Specialties</h1>
    </div>

    <ul>
    @if (Model.Count == 0)
    {
      <p>No specialties have been added yet!</p>
    }
    @if (Model.Count != 0)
    {
      @foreach (var specialty in Model)
      {
        <a href="/stylists/specialties/@specialty.GetId()">Specialty: @specialty.GetSpecialtyType()</a><br>
      }
    }
    </ul>
    <a href="/stylists/specialties/new" class="btn btn-dark">Add Specialty</a>
    <a href="/stylists/specialties/delete" class="btn btn-dark">Delete Specialties</a>
    <a href="/stylists/specialties/edit" class="btn btn-dark">Update a Specialty</a>
    <a href="/" class="btn btn-dark">Back to homepage</a>
  </div>
</body>
</html>
